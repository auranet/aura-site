<new-page>
  <after-stylesheets:>
      <theme-stylesheet name="emmett"/>
  </after-stylesheets:>
  <append-content-header:>
    <%= button_to_function "Preview",
      "preview_markdown('page_body_markdown', 'page_body_html')",
      :class => "button preview-button" %>
    <div class="clear"></div>
  </append-content-header:>
  <prepend-content-body:>
    <div id="content-preview"></div>
  </prepend-content-body:>
</new-page>
